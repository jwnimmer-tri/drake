)

filegroup(
    name = "models",
    srcs = [
        ":glob_models",
        "@drake_models//:wsg_50_description/meshes/finger_with_tip.obj",
        "@drake_models//:wsg_50_description/meshes/finger_without_tip.obj",
        "@drake_models//:wsg_50_description/meshes/wsg_body.obj",
    ],
    visibility = ["//visibility:public"],
)

