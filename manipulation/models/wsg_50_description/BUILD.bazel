xacro_filegroup(
    name = "xacro",
    srcs = [
        "sources/schunk_wsg_50.sdf.xacro",
        "sources/schunk_wsg_50_ball_contact.sdf.xacro",
    ],
    data = [
        "sources/schunk_wsg_50.xacro",
    ],
)

drake_py_unittest(
    name = "xacro_cross_check_test",
    data = [
        ":glob_models",
        ":xacro",
    ],
    deps = [
        "@bazel_tools//tools/python/runfiles",
    ],
)

drake_cc_googletest(
    name = "wsg_50_sdf_test",
    data = [":models"],
    deps = [
        "//common:find_resource",
        "//multibody/parsing",
        "//multibody/plant",
