<element name="robot" required="1">
  <attribute name="name" type="string" default="" required="0"/>

  <element name="link" required="*">
    <attribute name="name" type="string" default="" required="1"/>

    <element name="inertial" required="0">
      <element name="origin" required="0">
        <attribute name="xyz" type="string" default="0 0 0" required="0"/>
        <attribute name="rpy" type="string" default="0 0 0" required="0"/>
      </element>
      <element name="mass" required="1">
        <attribute name="value" type="double" default="" required="1"/>
      </element>
      <element name="inertia" required="1">
        <attribute name="ixx" type="double" default="" required="1"/>
        <attribute name="iyy" type="double" default="" required="1"/>
        <attribute name="izz" type="double" default="" required="1"/>
        <attribute name="ixy" type="double" default="" required="1"/>
        <attribute name="ixz" type="double" default="" required="1"/>
        <attribute name="iyz" type="double" default="" required="1"/>
      </element>
    </element>

    <element name="visual" required="*">
      <attribute name="name" type="string" default="" required="0"/>
      <element name="origin" required="0">
        <attribute name="xyz" type="string" default="0 0 0" required="0"/>
        <attribute name="rpy" type="string" default="0 0 0" required="0"/>
      </element>
      <element name="geometry" required="0">
        <element name="box" required="0">
          <attribute name="size" type="string" default="" required="1"/>
        </element>
        <element name="cylinder" required="0">
          <attribute name="radius" type="double" default="" required="1"/>
          <attribute name="length" type="double" default="" required="1"/>
        </element>
        <element name="sphere" required="0">
          <attribute name="radius" type="double" default="" required="1"/>
        </element>
        <element name="mesh" required="0">
          <attribute name="filename" type="string" default="" required="1"/>
          <attribute name="scale" type="string" default="" required="0"/>
        </element>
      </element>
    </element>

    <element name="collision" required="*">
      <attribute name="name" type="string" default="" required="0"/>
      <element name="origin" required="0">
        <attribute name="xyz" type="string" default="0 0 0" required="0"/>
        <attribute name="rpy" type="string" default="0 0 0" required="0"/>
      </element>
      <element name="geometry" required="0">
        <element name="box" required="0">
          <attribute name="size" type="string" default="" required="1"/>
        </element>
        <element name="cylinder" required="0">
          <attribute name="radius" type="double" default="" required="1"/>
          <attribute name="length" type="double" default="" required="1"/>
        </element>
        <element name="sphere" required="0">
          <attribute name="radius" type="double" default="" required="1"/>
        </element>
        <element name="mesh" required="0">
          <attribute name="filename" type="string" default="" required="1"/>
          <attribute name="scale" type="string" default="" required="0"/>
        </element>
      </element>
    </element>
  </element>

  <element name="joint" required="*">
    <attribute name="name" type="string" default="" required="1"/>
    <attribute name="type" type="string" default="" required="1"/>
    <element name="origin" required="0">
      <attribute name="xyz" type="string" default="0 0 0" required="0"/>
      <attribute name="rpy" type="string" default="0 0 0" required="0"/>
    </element>
    <element name="parent" required="1">
      <attribute name="link" type="string" default="" required="1"/>
    </element>
    <element name="child" required="1">
      <attribute name="link" type="string" default="" required="1"/>
    </element>
    <element name="axis" required="0">
      <attribute name="xyz" type="string" default="1 0 0" required="1"/>
    </element>
    <element name="limit" required="0">
      <attribute name="lower" type="double" default="0" required="0"/>
      <attribute name="upper" type="double" default="0" required="0"/>
      <attribute name="effort" type="double" default="" required="1"/>
      <attribute name="velocity" type="double" default="" required="1"/>
    </element>
    <element name="mimic" required="0">
      <attribute name="joint" type="string" default="" required="1"/>
      <attribute name="multiplier" type="double" default="1" required="0"/>
      <attribute name="offset" type="double" default="0" required="0"/>
    </element>
  </element>

  <element name="transmission" required="*">
    <attribute name="name" type="string" default="" required="1"/>
    <element name="type" required="1"/>
    <element name="joint">
      <attribute name="name" type="string" default="" required="1"/>
      <element name="actuator" required="+">
        <attribute name="name" type="string" default="" required="1"/>
      </element>
    </element>
  </element>
</element>
